<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>头像</th>
            <th>微博ID</th>
            <th>微博帐号</th>
            <th>出生日期</th>
            <th>性别</th>
            <th>身高</th>
            <th>所在地</th>
            <th>描述</th>
            <th>锁定</th>
            <th>编辑</th>
            <th>删除</th>
        </tr>
    </thead>
    <tbody>
        <% for (i = 0; i < weibousers.length; i++){ %>
        <tr>
            <td><img src="<%= weibousers[i].avatar %>" class="img-polaroid"></td>
            <td><%= weibousers[i].innerId %></td>
            <td><a href="http://weibo.com/u/<%= weibousers[i].innerId %>" target="blank"><%= weibousers[i].userName %></a></td>
            <td><%= weibousers[i].formattedBirthday %></td>
            <td><%= weibousers[i].gender %></td>
            <td><%= weibousers[i].height %></td>
            <td><%= weibousers[i].userLocation %></td>
            <td><%= weibousers[i].description %></td>
            <td><%= weibousers[i].lock ? '是' : '否' %></td>
            <td>
                <p data-placement="top" data-toggle="tooltip" title="编辑">
                    <button class="btn btn-primary btn-xs" data-title="编辑" data-toggle="modal" data-target="#edit">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </p>
            </td>
            <td>
                <p data-placement="top" data-toggle="tooltip" title="删除">
                    <button class="btn btn-danger btn-xs" data-id="<%= weibousers[i].id%>" data-title="删除" data-toggle="modal" data-target="#delete" >
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </p>
            </td>

        </tr>
        <% } %>
    </tbody>
</table>
<div class="clearfix"></div>
<!-- 使用bootstrap-paginator(http://lyonlai.github.io/bootstrap-paginator/)分页 -->
<ul id="pagination">
</ul>
<script>
  $('#pagination').bootstrapPaginator({
    bootstrapMajorVersion: 3,
    alignment: 'right',
    currentPage: <%= page %>,
    totalPages: <%= totalPages %>,
    numberOfPages: 5,
    pageUrl: function(type, page, current){
      return location.pathname + '?page=' + page;
    }
  });
</script>
