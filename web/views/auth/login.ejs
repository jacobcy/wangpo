<div class="row">
    <div class="col-md-offset-5 col-md-3">
        <div class="form-login">
        <h4>欢迎光临</h4>
        <% if (errors) {%>
          <p>
          <% errors.forEach(function (error) { %>
            <em class="text-muted"><%= __(error) %></em>
          <% }) %>
          </p>
        <% } %>
        <form role="form" action="/auth/local" method="post">
            <input type="text" id="identifier" class="form-control input-sm chat-input" placeholder="用户名" />
            </br>
            <input type="password" id="password" class="form-control input-sm chat-input" placeholder="密码" />
            </br>
            <div class="wrapper">
            <span class="group-btn"><button type="submit" class="btn btn-default">登录</button></span>
            </div>
        </form>
        </div>
    </div>
</div>

<% if (providers.length) {%>
  <h4>You can also use one of these...</h4>

  <% Object.keys(providers).forEach(function (key) { %>
    <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
  <% }) %>
<% } %>
